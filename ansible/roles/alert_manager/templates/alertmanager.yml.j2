route:
  receiver: 'slack_channel'
  routes:
    - match:
        alertname: 'HighDiskUsage'
      receiver: 'webhook_receiver'

receivers:
  - name: 'slack_channel'
    slack_configs:
      - channel: '#alerts'
        send_resolved: true
        title: "High Disk Usage Alert"
        text: "Disk usage exceeded threshold."

  - name: 'webhook_receiver'
    webhook_configs:
      - url: 'http://10.134.12.115:8080/alertmanager-webhook'

  # Optionally, if you want email notification:
  # - name: 'email_receiver'
  #   email_configs:
  #     - to: 'alert@example.com'
  #       send_resolved: true
