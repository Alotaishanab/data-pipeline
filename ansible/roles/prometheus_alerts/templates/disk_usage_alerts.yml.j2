groups:
  - name: disk_usage_alerts
    rules:
      - alert: HighDiskUsage
        expr: node_filesystem_avail_bytes{mountpoint="/"} < 0.2 * node_filesystem_size_bytes{mountpoint="/"}
        for: 5m
        labels:
          severity: warning
        annotations:
          description: "Disk usage on / is above 80%"
          summary: "High disk usage"
